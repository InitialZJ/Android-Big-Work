<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".StatActivity">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="收入"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#FF8800"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFBB33"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5A82E"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_zhichu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="支出"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFF"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/date"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F8F8">

        <TextView
            android:id="@+id/date_range"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="1.30"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baobiao_zuo"
            android:layout_marginLeft="90dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baobiao_you"
            android:layout_alignParentRight="true"
            android:layout_marginRight="90dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_below="@id/date"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_below="@id/frameLayout"
        android:layout_above="@id/line5"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_shf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_shouru_type_gongzi"/>
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:text="生活费"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_shf1"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:gravity="right"
                    android:padding="10dp"
                    android:text="60.6%"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_shf2"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:text="666.6"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_gz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_shouru_type_gongzi"/>
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:text="工资"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_gz1"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:gravity="right"
                    android:padding="10dp"
                    android:text="60.6%"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_gz2"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:text="666.66"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_qt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_shouru_type_gongzi"/>
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:text="其他"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_qt1"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:gravity="right"
                    android:padding="10dp"
                    android:text="60.6%"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_qt2"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:text="400.0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>



    <LinearLayout
        android:id="@+id/choise"
        android:layout_alignParentBottom="true"
        android:background="#EEE"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_detail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/home_detail_btn_n"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明细"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:textColor="#000"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_account"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/home_account_btn_n"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:textColor="#000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/home_stat_btn_p"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图表"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:textColor="#DB4A3A"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_mine"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/home_me_btn_n"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:textColor="#000"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/line5"
        android:layout_above="@id/choise"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

</RelativeLayout>